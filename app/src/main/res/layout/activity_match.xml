<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index"
    tools:context=".match">

    <RelativeLayout
        android:id="@+id/drag_relative3"
        android:layout_width="300sp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:background="#4caf50"
        android:gravity="center"
        android:onClick="onDrag"
        android:orientation="vertical"
        tools:ignore="OnClick"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:src="@drawable/apple"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="28dp" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="13dp"
            android:src="@drawable/apple"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/apple" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drag_relative2"
        android:layout_width="300sp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:background="#c9cc06"
        android:gravity="center"
        android:onClick="onDrag"
        android:orientation="vertical"
        tools:ignore="OnClick"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="102dp"
            android:src="@drawable/mango"
            android:layout_marginLeft="102dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/mango"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drag_relative4"
        android:layout_width="300sp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/two"
        android:background="#85baef"
        android:gravity="center"
        android:onClick="onDrag"
        android:orientation="vertical"
        tools:ignore="OnClick"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/guava"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="29dp"
            android:src="@drawable/guava"
            android:layout_marginRight="29dp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="98dp"
            android:src="@drawable/guava"
            android:layout_marginRight="98dp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:src="@drawable/guava"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drag_relative"
        android:layout_width="300sp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="213dp"
        android:background="#e783b0"
        android:gravity="center"
        android:onClick="onDrag"
        android:orientation="vertical"
        tools:ignore="OnClick"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/strawberry" />

    </RelativeLayout>

    <TextView
        android:id="@+id/three"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/drag_relative2"
        android:text="3"
        android:textSize="40dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/two"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="184dp"
        android:text="2"
        android:textSize="40dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/four"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drag_relative"
        android:layout_alignParentEnd="true"
        android:text="4"
        android:textSize="40dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/drag_relative3"
        android:text="1"
        android:textSize="40dp"
        android:layout_alignParentRight="true" />



</RelativeLayout>
